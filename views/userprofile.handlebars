<title>User Profile</title>

<main class="userProfile">
    <a href="/home">Go Back to Home</a>
    <h1>User Profile</h1>
    <form action="/users/update/{{_id}}" method="POST" id="updateUser">
        <label for="inputFields">Change Profile</label>
        <div class="inputFields">
            <!-- First Name -->
            <div class="field-row">
                <label for="firstName" class="label">First Name</label>
                <button type="button" class="edit-btn" data-target="firstName">Edit</button>
                <input type="text" name="firstName" id="firstName" placeholder="{{firstName}}" disabled>
            </div>

            <!-- Last Name -->
            <div class="field-row">
                <label for="lastName" class="label">Last Name</label>
                <button type="button" class="edit-btn" data-target="lastName">Edit</button>
                <input type="text" name="lastName" id="lastName" placeholder="{{lastName}}" disabled>
            </div>

            <!-- User ID -->
            <div class="field-row">
                <label for="userId" class="label">User ID</label>
                <button type="button" class="edit-btn" data-target="userId">Edit</button>
                <input type="text" name="userId" id="userId" placeholder="{{userId}}" disabled>
            </div>

            <!-- Password -->
            <div class="field-row">
                <label for="oldPassword" class="label">Old Password</label>
                <button type="button" class="edit-btn" data-target="oldPassword">Edit</button>
                <input type="password" name="oldPassword" id="oldPassword" disabled>
            </div>
            <div class="field-row">
                <label for="password" class="label">New Password</label>
                <button type="button" class="edit-btn" data-target="password">Edit</button>
                <input type="password" name="password" id="password" disabled>
            </div>

            <!-- Email -->
            <div class="field-row">
                <label for="email" class="label">Email</label>
                <button type="button" class="edit-btn" data-target="email">Edit</button>
                <input type="text" name="email" id="email" placeholder="{{email}}" disabled>
            </div>

            <!-- DOB -->
            <div class="field-row">
                <label for="dob" class="label">Date of Birth</label>
                <button type="button" class="edit-btn" data-target="dob">Edit</button>
                <input type="text" name="dob" id="dob" placeholder="{{dob}}" disabled>
            </div>

            <!-- City -->
            <div class="field-row">
                <label for="city" class="label">City</label>
                <button type="button" class="edit-btn" data-target="city">Edit</button>
                <input type="text" name="city" id="city" placeholder="{{city}}" disabled>
            </div>

            <!-- State -->
            <div class="field-row">
                <label for="state" class="label">State</label>
                <button type="button" class="edit-btn" data-target="state">Edit</button>
                <input type="text" name="state" id="state" placeholder="{{state}}" disabled>
            </div>
        </div>

        <!-- Save Changes Button -->
        <button type="submit">Save Changes</button>
    </form>
</main>
