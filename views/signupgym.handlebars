<!-- Sign up gym page (role = gym) -->

<title>Sign Up - Gym</title>

<main>
    <h1>Sign Up - Gym</h1>
    <form action="/gyms/signup" method="POST" id="gymSignUpForm">
        <div class="formContainer">
            <div class="inputFields">
                <!-- Gym Name -->
                <div> <label for="name" class="label">Gym Name</label> </div>
                <div> <input type="text" name="name" id="name"> </div>
                <div class="error" id="nameError" hidden></div>

                <!-- User ID -->
                <div> <label for="userId" class="label">User ID</label> </div>
                <div> <input type="text" name="userId" id="userId"> </div>
                <div class="error" id="userIdError" hidden></div>

                <!-- Password -->
                <div> <label for="password" class="label">Password</label> </div>
                <div> <input type="password" name="password" id="password"> </div>
                <div class="error" id="passwordError" hidden></div>

                <!-- Confirm Password -->
                <div> <label for="confirmPassword" class="label">Confirm Password</label> </div>
                <div> <input type="password" name="confirmPassword" id="confirmPassword"> </div>
                <div class="error" id="confirmPasswordError" hidden></div>

                <!-- Email -->
                <div> <label for="email" class="label">Email</label> </div>
                <div> <input type="email" name="email" id="email"> </div>
                <div class="error" id="emailError" hidden></div>

                <!-- Address -->
                <div> <label for="address" class="label">Address</label> </div>
                <div> <input type="text" name="address" id="address"> </div>
                <div class="error" id="addressError" hidden></div>

                <!-- Age Check -->
                <div> <label for="age" class="label">Above 13 years</label> </div>
                <div> <input type="checkbox" name="age" id="age"> </div>
                <div class="error" id="ageError" hidden></div>
            </div>

            <!-- Hours -->
            <fieldset id="hoursFields">
                <legend>Enter Operating Hours</legend>
                <p>Example: '8am-10pm' (hh[a/p]m-hh[a/p]m)</p>

                <div>
                    <label for="monday">Monday:</label>
                    <input type="text" id="monday" name="monday" placeholder="Closed">
                    <p class="error" id="monError" hidden></p>
                </div>
                <div>
                    <label for="tuesday">Tuesday:</label>
                    <input type="text" id="tuesday" name="tuesday" placeholder="Closed">
                    <p class="error" id="tueError" hidden></p>
                </div>
                <div>
                    <label for="wednesday">Wednesday:</label>
                    <input type="text" id="wednesday" name="wednesday" placeholder="Closed">
                    <p class="error" id="wedError" hidden></p>
                </div>
                <div>
                    <label for="thursday">Thursday:</label>
                    <input type="text" id="thursday" name="thursday" placeholder="Closed">
                    <p class="error" id="thuError" hidden></p>
                </div>
                <div>
                    <label for="friday">Friday:</label>
                    <input type="text" id="friday" name="friday" placeholder="Closed">
                    <p class="error" id="friError" hidden></p>
                </div>
                <div>
                    <label for="saturday">Saturday:</label>
                    <input type="text" id="saturday" name="saturday" placeholder="Closed">
                    <p class="error" id="satError" hidden></p>
                </div>
                <div>
                    <label for="sunday">Sunday:</label>
                    <input type="text" id="sunday" name="sunday" placeholder="Closed">
                    <p class="error" id="sunError" hidden></p>
                </div>
            </fieldset>
        </div>

        <!-- Extra Info -->
        <div><p>Add personal trainers, classes, and extra amenities on your profile page!</p></div>

        <!-- Sign Up Button -->
        <button type="submit">Sign Up</button>
    </form>

    <!-- Back to Home Button -->
    <div style="text-align: center; margin-top: 20px;">
        <a href="/home" style="
            display: inline-block;
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-size: 1em;
            font-weight: bold;
            transition: background-color 0.3s ease;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
        ">
            Back to Home
        </a>
    </div>
</main>
