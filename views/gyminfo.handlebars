<title>{{gym.name}} - Info</title>

<main class="gym-info" style="font-family: Arial, sans-serif; margin: 20px auto; max-width: 800px; line-height: 1.6;">
    <h1 style="text-align: center; color: #007BFF; margin-bottom: 20px;">{{gym.name}}</h1>

    <!-- Address -->
    <p><strong>Address:</strong> {{gym.address}}</p>
    <p><strong>Email:</strong> {{gym.email}}</p>

    <!-- Hours -->
    <p><strong>Operating Hours:</strong></p>
    <ul style="list-style-type: none; padding: 0;">
        {{#each gym.hours}}
            <li style="margin-bottom: 5px;">{{@key}}: {{this}}</li>
        {{/each}}
    </ul>

    <!-- Equipment -->
    <p><strong>Available Equipment:</strong></p>
    <ul style="list-style-type: disc; padding-left: 20px;">
        {{#if gym.equipment.length}}
            {{#each gym.equipment}}
                <li>{{this}}</li>
            {{/each}}
        {{else}}
            <li>No equipment listed.</li>
        {{/if}}
    </ul>

    <!-- Classes -->
    <p><strong>Classes Offered:</strong></p>
    <ul style="list-style-type: disc; padding-left: 20px;">
        {{#if gym.classes.length}}
            {{#each gym.classes}}
                <li>{{this}}</li>
            {{/each}}
        {{else}}
            <li>No classes available.</li>
        {{/if}}
    </ul>

    <!-- Trainers -->
    <p><strong>Trainers:</strong></p>
    <ul style="list-style-type: disc; padding-left: 20px;">
        {{#if gym.trainers.length}}
            {{#each gym.trainers}}
                <li>{{this}}</li>
            {{/each}}
        {{else}}
            <li>No trainers listed.</li>
        {{/if}}
    </ul>

    <!-- Extra Amenities -->
    <p><strong>Extra Amenities:</strong></p>
    <ul style="list-style-type: disc; padding-left: 20px;">
        {{#if gym.extra.length}}
            {{#each gym.extra}}
                <li>{{this}}</li>
            {{/each}}
        {{else}}
            <li>No extra amenities available.</li>
        {{/if}}
    </ul>

    <!-- Rating -->
    <p><strong>Rating:</strong> {{gym.rating}} / 5</p>

    <!-- Reviews -->
    <p><strong>Reviews:</strong></p>
    <ul style="list-style-type: none; padding: 0;">
        {{#if gym.reviews.length}}
            {{#each gym.reviews}}
                <li style="margin-bottom: 10px; border-bottom: 1px solid #ddd; padding-bottom: 10px;">
                    <strong>User:</strong> {{this.userId}} <br>
                    <strong>Rating:</strong> {{this.rating}} / 5 <br>
                    <strong>Comment:</strong> {{this.comment}} <br>
                    <em>Posted on: {{this.createdAt}}</em>
                </li>
            {{/each}}
        {{else}}
            <li>No reviews yet.</li>
        {{/if}}
    </ul>

    <!-- Back to Home Link -->
    <div style="text-align: center; margin-top: 20px;">
        <a href="/home" style="
            display: inline-block;
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;">
            Back to Home
        </a>
    </div>
</main>
